<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhbitsoft.studentparty">

    <!-- 需要动态申请的权限 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- 后台自动授予的权限 -->

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity android:name=".module.start.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".module.start.welcome.WelcomeActivity" />
        <activity
            android:name=".main.Main2Activity"
            android:label="@string/title_activity_main2" />
        <activity android:name=".module.login.LoginActivity" />
        <activity android:name=".module.mine.setting.SettingsActivity" />
        <activity
            android:name=".module.mine.AboutMe"
            android:launchMode="singleTop" />
        <activity
            android:name=".module.mine.Profile"
            android:launchMode="singleTop" />
        <activity
            android:name=".module.mine.setting.HelpFeedback"
            android:launchMode="singleTop" />
        <activity
            android:name=".module.mine.setting.NotifyWarn"
            android:launchMode="singleTop" />
        <activity
            android:name=".module.mine.setting.AccountSafe"
            android:launchMode="singleTop" />
        <activity
            android:name=".module.mine.setting.ChgPwdByPho"
            android:launchMode="singleTop" />
        <activity
            android:name=".module.mine.setting.ChgPwdByOld"
            android:launchMode="singleTop" />
        <activity android:name=".module.mine.setting.InputNewPwd" />
        <activity android:name=".module.mine.setting.feedback_bug" />
        <activity android:name=".module.mine.setting.feedback_common" />
        <activity android:name=".module.mine.setting.feedback_other"></activity>
    </application>

</manifest>